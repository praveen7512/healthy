        android:layout_height="wrap_content"
        android:text="Gender M/F"
        android:layout_marginLeft="45dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/age_spin"
        app:layout_constraintStart_toEndOf="@+id/age_spin"
        app:layout_constraintTop_toTopOf="@+id/age_spin" />

    <EditText
